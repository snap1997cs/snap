@model IEnumerable<LearnerPlatform.Models.Snap97_NS_CS.Course>

<br />
    <form method="get">
        <input type="text" name="searchTerm" />
        <input type="submit" value="Search" id="submit" />
    </form>
<br />
<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.course_name)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.course_description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.course_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_name)
            </td>
            <td> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_description)
            </td>
            <td>
                @Html.ActionLink("Add", "AddToPath", new { id = item.course_id })
        </tr>
    }
</table>